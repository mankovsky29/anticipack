@using Anticipack.Resources.Localization
@using Anticipack.Components.Shared.NavigationHeaderComponent
@using Microsoft.Extensions.Localization
@using Microsoft.JSInterop

@inject IStringLocalizer<AppResources> L
@inject INavigationHeaderService NavigationHeaderService
@inject IJSRuntime JSRuntime

<div class="nav-container">
    <div class="top-row navbar navbar-dark">
        <div class="container-fluid">
            <button title="@L["NavigationMenu"]" class="navbar-toggler" @onclick="ToggleNavMenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <NavigationHeader />
        </div>
    </div>

    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="flex-column">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="packing-activities">
                    <span class="oi oi-list" aria-hidden="true"></span> @L["PackingActivitiesMenu"]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="support">
                    <span class="oi oi-chat" aria-hidden="true"></span> @L["SupportMenu"]
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="user-settings">
                    <span class="oi oi-cog" aria-hidden="true"></span> @L["SettingsMenu"]
                </NavLink>
            </div>
        </nav>
    </div>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "nav-menu-collapsed" : "nav-menu-expanded";

    private async Task ToggleNavMenu()
    {
        // Check if we're on mobile screen (< 641px)
        // Only toggle on mobile - on tablet/desktop the menu is always visible
        var isMobile = await JSRuntime.InvokeAsync<bool>("eval", "window.innerWidth < 641");
        
        if (isMobile)
        {
            collapseNavMenu = !collapseNavMenu;
            
            // Notify the service about the nav menu state
            NavigationHeaderService.SetNavMenuExpanded(!collapseNavMenu);
        }
    }
}
