    private void OnKeyboardVisibilityChanged(bool visible, double height)
    {
        _keyboardVisible = visible;
        _keyboardHeight = height;
        if (visible)
        {
            _showQuickCategoryDropdown = false;
            _ = JSRuntime.InvokeVoidAsync("handleKeyboardVisibility", true, height);
        }
        else
        {
            _ = JSRuntime.InvokeVoidAsync("handleKeyboardVisibility", false, height);
        }
        
        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        try
        {
            if (KeyboardService != null)
            {
                KeyboardService.KeyboardVisibilityChanged -= OnKeyboardVisibilityChanged;
            }
        }
