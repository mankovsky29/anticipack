@page "/user-settings"
@using Anticipack.Services
@using Anticipack.Resources.Localization
@inject IJSRuntime JSRuntime
@using System.Globalization
@inject ILocalizationService LocalizationService
@implements IDisposable

<div class="settings-page">
    <div class="settings-header">
        <div class="header-content">
            <i class="fas fa-cog"></i>
            <div>
                <h2>@AppResources.Settings</h2>
                <p>@AppResources.CustomizeExperience</p>
            </div>
        </div>
    </div>

    <div class="settings-content">
        <!-- Appearance Section -->
        <div class="setting-section">
            <div class="section-header">
                <i class="fas fa-palette"></i>
                <span>@AppResources.Appearance</span>
            </div>
            
            <div class="section-body">
                <div class="theme-selector">
                    <button class="theme-option @(CurrentTheme == "light" ? "active" : "")"
                            @onclick='() => SetTheme("light")'
                            title="@AppResources.LightThemeTitle">
                        <i class="fas fa-sun"></i>
                        <span>@AppResources.LightTheme</span>
                    </button>
                    <button class="theme-option @(CurrentTheme == "dark" ? "active" : "")"
                            @onclick='() => SetTheme("dark")'
                            title="@AppResources.DarkThemeTitle">
                        <i class="fas fa-moon"></i>
                        <span>@AppResources.DarkTheme</span>
                    </button>
                    <button class="theme-option @(CurrentTheme == "auto" ? "active" : "")"
                            @onclick='() => SetTheme("auto")'
                            title="@AppResources.AutoThemeTitle">
                        <i class="fas fa-magic"></i>
                        <span>@AppResources.AutoTheme</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Language Section -->
        <div class="setting-section">
            <div class="section-header">
                <i class="fa fa-language"></i>
                <span>@AppResources.Language</span>
            </div>

            <div class="section-body">
                <div class="language-selector">
                    <button class="language-option @(IsCurrentLanguage("en") ? "active" : "")" 
                            @onclick='() => ChangeLanguage("en")'>
                        <span class="language-icon">🇺🇸</span>
                        <span>English</span>
                    </button>
                    <button class="language-option @(IsCurrentLanguage("es") ? "active" : "")" 
                            @onclick='() => ChangeLanguage("es")'>
                        <span class="language-icon">🇪🇸</span>
                        <span>Español</span>
                    </button>
                    <button class="language-option @(IsCurrentLanguage("ru") ? "active" : "")" 
                            @onclick='() => ChangeLanguage("ru")'>
                        <span class="language-icon">🇷🇺</span>
                        <span>Русский</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Notifications Section (Coming Soon) -->
        <div class="setting-section">
            <div class="section-header">
                <i class="fas fa-bell"></i>
                <span>@AppResources.Notifications</span>
                <div class="coming-soon-badge">@AppResources.ComingSoon</div>
            </div>
            
            <div class="section-body">
                <div class="setting-row">
                    <div class="setting-info">
                        <label>@AppResources.PushNotifications</label>
                        <span class="setting-hint">@AppResources.NotifiedAboutUpdates</span>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" @bind="NotificationsEnabled" disabled>
                        <span class="toggle-slider"></span>
                    </label>
                </div>
            </div>
        </div>

        <!-- Data & Storage Section (Coming Soon) -->
        <div class="setting-section">
            <div class="section-header">
                <i class="fas fa-database"></i>
                <span>@AppResources.DataStorage</span>
                <div class="coming-soon-badge">@AppResources.ComingSoon</div>
            </div>

            <div class="section-body">
                <button class="setting-action" disabled>
                    <div class="action-content">
                        <i class="fas fa-trash-alt"></i>
                        <div>
                            <div class="action-title">@AppResources.ClearCache</div>
                            <div class="action-subtitle">@AppResources.FreeUpStorage</div>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>

    <div class="settings-footer">
        <i class="fas fa-info-circle"></i>
        <span>@AppResources.Version 1.0.0</span>
    </div>
</div>

@code {
    private string CurrentTheme { get; set; } = "light";
    private bool NotificationsEnabled { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            CurrentTheme = await JSRuntime.InvokeAsync<string>("themeManager.getTheme");
        }
        catch
        {
            CurrentTheme = "light";
        }

        LocalizationService.CultureChanged += OnCultureChanged;
    }

    private async Task SetTheme(string theme)
    {
        CurrentTheme = theme;
        await JSRuntime.InvokeVoidAsync("themeManager.setTheme", theme);
    }

    private bool IsCurrentLanguage(string culture)
    {
        return LocalizationService.CurrentCulture.TwoLetterISOLanguageName == culture;
    }

    private void ChangeLanguage(string culture)
    {
        LocalizationService.SetCulture(culture);
    }

    private void OnCultureChanged(object? sender, CultureInfo culture)
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LocalizationService.CultureChanged -= OnCultureChanged;
    }
}