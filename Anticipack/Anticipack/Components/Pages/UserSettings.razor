@page "/user-settings"
@inject IJSRuntime JSRuntime

<div class="settings-page">
    <div class="settings-header">
        <div class="header-content">
            <div class="header-icon">
                <i class="fas fa-cog"></i>
            </div>
            <div>
                <h2>Settings</h2>
                <p class="header-subtitle">Customize your experience</p>
            </div>
        </div>
    </div>

    <div class="settings-content">
        <!-- Appearance Section -->
        <div class="setting-section">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-palette"></i>
                </div>
                <div>
                    <h3>Appearance</h3>
                    <p class="section-description">Personalize how the app looks and feels</p>
                </div>
            </div>
            
            <div class="setting-group">
                <div class="setting-item">
                    <div class="setting-label">
                        <label>Theme</label>
                    </div>
                    <div class="theme-selector">
                        <button class="theme-option @(CurrentTheme == "light" ? "active" : "")" 
                                @onclick='() => SetTheme("light")'
                                title="Light theme">
                            <div class="theme-icon">
                                <i class="fas fa-sun"></i>
                            </div>
                            <span class="theme-name">Light</span>
                            @if (CurrentTheme == "light")
                            {
                                <i class="fas fa-check theme-check"></i>
                            }
                        </button>
                        <button class="theme-option @(CurrentTheme == "dark" ? "active" : "")" 
                                @onclick='() => SetTheme("dark")'
                                title="Dark theme">
                            <div class="theme-icon">
                                <i class="fas fa-moon"></i>
                            </div>
                            <span class="theme-name">Dark</span>
                            @if (CurrentTheme == "dark")
                            {
                                <i class="fas fa-check theme-check"></i>
                            }
                        </button>
                        <button class="theme-option @(CurrentTheme == "auto" ? "active" : "")" 
                                @onclick='() => SetTheme("auto")'
                                title="Automatic theme based on system preferences">
                            <div class="theme-icon">
                                <i class="fas fa-magic"></i>
                            </div>
                            <span class="theme-name">Auto</span>
                            @if (CurrentTheme == "auto")
                            {
                                <i class="fas fa-check theme-check"></i>
                            }
                        </button>
                    </div>
                    <div class="setting-hint">
                        <i class="fas fa-info-circle"></i>
                        <span>
                            @if (CurrentTheme == "auto")
                            {
                                <text>The app will automatically match your device's system theme</text>
                            }
                            else if (CurrentTheme == "dark")
                            {
                                <text>Dark theme reduces eye strain in low-light environments</text>
                            }
                            else
                            {
                                <text>Light theme is ideal for bright environments</text>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Notifications Section (Placeholder for future features) -->
        <div class="setting-section">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-bell"></i>
                </div>
                <div>
                    <h3>Notifications</h3>
                    <p class="section-description">Manage your notification preferences</p>
                </div>
            </div>
            
            <div class="setting-group">
                <div class="setting-item-row">
                    <div class="setting-label">
                        <label>Push Notifications</label>
                        <span class="label-description">Get notified about important updates</span>
                    </div>
                    <label class="toggle-switch">
                        <input type="checkbox" @bind="NotificationsEnabled" disabled>
                        <span class="toggle-slider"></span>
                    </label>
                </div>
                <div class="coming-soon-badge">
                    <i class="fas fa-clock"></i> Coming Soon
                </div>
            </div>
        </div>

        <!-- Data & Storage Section (Placeholder) -->
        <div class="setting-section">
            <div class="section-header">
                <div class="section-icon">
                    <i class="fas fa-database"></i>
                </div>
                <div>
                    <h3>Data & Storage</h3>
                    <p class="section-description">Manage your app data</p>
                </div>
            </div>
            
            <div class="setting-group">
                <button class="setting-action-btn" disabled>
                    <div class="action-btn-content">
                        <i class="fas fa-trash-alt"></i>
                        <div>
                            <div class="action-btn-title">Clear Cache</div>
                            <div class="action-btn-subtitle">Free up storage space</div>
                        </div>
                    </div>
                    <i class="fas fa-chevron-right"></i>
                </button>
                <div class="coming-soon-badge">
                    <i class="fas fa-clock"></i> Coming Soon
                </div>
            </div>
        </div>
    </div>

    <div class="settings-footer">
        <div class="app-version">
            <i class="fas fa-info-circle"></i>
            <span>Version 1.0.0</span>
        </div>
    </div>
</div>

@code {
    private string CurrentTheme { get; set; } = "light";
    private bool NotificationsEnabled { get; set; } = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            CurrentTheme = await JSRuntime.InvokeAsync<string>("themeManager.getTheme");
        }
        catch
        {
            CurrentTheme = "light";
        }
    }

    private async Task SetTheme(string theme)
    {
        CurrentTheme = theme;
        await JSRuntime.InvokeVoidAsync("themeManager.setTheme", theme);
    }
}